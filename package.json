{
  "name": "sznm.dev",
  "private": true,
  "description": "Agustinus Nathaniel's dev site",
  "version": "1.3.1",
  "author": "sozonome",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "format": "prettier --write src",
    "up-latest": "yarn upgrade-interactive --latest",
    "release": "standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.7",
    "@emotion/cache": "^11.4.0",
    "@emotion/react": "^11.4.1",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@fontsource/catamaran": "^4.5.0",
    "@fontsource/recursive": "^4.5.0",
    "chakra-ui-markdown-renderer": "^3.0.1",
    "cors": "^2.8.5",
    "framer-motion": "^4.1.17",
    "gray-matter": "^4.0.3",
    "next": "11.1.2",
    "next-seo": "^4.26.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-icons": "^4.2.0",
    "react-markdown": "^7.0.1",
    "react-syntax-highlighter": "^15.4.4",
    "rehype-raw": "^6.1.0",
    "remark": "^14.0.1",
    "remark-html": "^14.0.1",
    "rss": "^1.2.2",
    "sass": "^1.39.2",
    "twemoji": "^13.1.0",
    "utterances-react-component": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@types/cors": "^2.8.12",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/rss": "^0.0.29",
    "@types/twemoji": "^12.1.2",
    "commitlint": "^13.1.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-sznm": "^0.1.7",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "next-sitemap": "^1.6.168",
    "prettier": "^2.4.0",
    "standard-version": "^9.3.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sozonome/sznm.dev"
  },
  "bugs": {
    "url": "https://github.com/sozonome/sznm.dev/issues"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  }
}
